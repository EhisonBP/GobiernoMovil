<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="automatic_update"
        android:summaryOff="@string/automatic_update_summary_off"
        android:summaryOn="@string/automatic_update_summary_on"
        android:title="@string/automatic_update"/>
    
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="vibration"
        android:summaryOff="@string/vibration_summary_off"
        android:summaryOn="@string/vibration_summary_on"
        android:title="@string/vibration" />

    <PreferenceCategory
        android:key="search_preferences"
        android:title="@string/search_preferences" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="results"
            android:summary="@string/results_summary"
            android:title="@string/results_title" />
        
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="suggestions"
            android:summary="@string/suggestions_summary"
            android:title="@string/suggestions_title" />
        
        <Preference
            android:key="search"
            android:summary="@string/clear_history_summary"
            android:title="@string/clear_history" />
        
    </PreferenceCategory>
    
    <PreferenceCategory
        android:key="about_preferences"
        android:title="@string/about" >
        
        <Preference
            android:key="about"
            android:summary="@string/about_summary" />
        
    </PreferenceCategory>

</PreferenceScreen>