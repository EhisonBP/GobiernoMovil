<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="left" android:padding="4dip">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:clickable="true"
			android:onClick="onMainClick" android:textColor="@color/text"
			android:text="@string/directory_title" android:focusable="true" />

		<TextView android:text=" | " android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="@color/text" />

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="@color/text"
			android:text="@string/mayoralties_title" />

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="right">

			<ImageView android:src="@color/ic_logo_color"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:clickable="true" android:onClick="onMainClick"
				android:focusable="true" />
		</LinearLayout>

	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<ListView android:id="@+id/list_mayor" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:dividerHeight="1dip"
			android:textFilterEnabled="true"></ListView>

	</LinearLayout>

</LinearLayout>