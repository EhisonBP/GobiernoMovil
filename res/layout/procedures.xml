<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="left" android:padding="4dip">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:clickable="true"
			android:onClick="onMainClick" android:textColor="@color/text"
			android:text="@string/app_name" />

		<TextView android:text=" | " android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="@color/text" />

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="@color/text"
			android:text="@string/procedures" />

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="right">

			<ImageView android:src="@color/effect_icon"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:clickable="true" android:onClick="onMainClick" />
		</LinearLayout>

	</LinearLayout>

	<LinearLayout android:gravity="center"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="10sp">

		<TextView android:text="@string/selected"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="18sp" android:textColor="@color/text"
			android:paddingRight="10sp"></TextView>

		<Spinner android:id="@+id/spinner_procedures" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:prompt="@string/procedures_title"></Spinner>

	</LinearLayout>

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="8sp">

			<TextView android:id="@+id/text_procedures" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:linksClickable="true"
				android:autoLink="all" android:textColor="#FFFFFF" android:textSize="16sp"></TextView>

		</LinearLayout>

	</ScrollView>

</LinearLayout>