<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:fillViewport="true">
	<LinearLayout android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@color/background">

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center" android:padding="10dip">
			<ImageView android:src="@drawable/logo"
				android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
		</LinearLayout>

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center" android:padding="20dip">
			<TextView android:text="@string/search_instructions"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="center" android:textSize="18sp" android:textColor="@color/text"></TextView>
		</LinearLayout>

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center">

			<TableLayout android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:layout_gravity="center"
				android:stretchColumns="*">

				<TableRow>
					<ImageView android:id="@+id/main_dir" android:gravity="center"
						android:src="@color/effect_dir" android:clickable="true"
						android:onClick="onClick"></ImageView>
					<ImageView android:id="@+id/main_tra" android:gravity="center"
						android:src="@color/effect_tra" android:clickable="true"
						android:onClick="onClick"></ImageView>
					<ImageView android:id="@+id/main_gob" android:gravity="center"
						android:src="@color/effect_gob" android:clickable="true"
						android:onClick="onClick"></ImageView>
				</TableRow>
				<TableRow>
					<TextView android:id="@id/main_dir" android:text="@string/main_dir"
						android:gravity="center" android:textColor="@color/text"
						android:clickable="true" android:onClick="onClick"></TextView>
					<TextView android:id="@id/main_tra" android:text="@string/main_tra"
						android:gravity="center" android:textColor="@color/text"
						android:clickable="true" android:onClick="onClick"></TextView>
					<TextView android:id="@id/main_gob" android:text="@string/main_gob"
						android:gravity="center" android:textColor="@color/text"
						android:clickable="true" android:onClick="onClick"></TextView>
				</TableRow>
			</TableLayout>
		</LinearLayout>
	</LinearLayout>
</ScrollView>