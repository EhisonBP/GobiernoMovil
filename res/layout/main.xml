<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:fillViewport="true" android:background="@drawable/background">
	
	<LinearLayout android:orientation="vertical"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center" android:padding="20dip">
			<ImageView android:src="@drawable/logo"
				android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
		</LinearLayout>

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center" android:padding="20dip">
			<TextView android:text="@string/search_instructions"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="center" android:textSize="18dip" android:textColor="@color/text"></TextView>
		</LinearLayout>

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center">

			<LinearLayout android:orientation="vertical"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="center" android:padding="10dip">
				<ImageView android:src="@color/effect_dir"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:clickable="true" android:onClick="showActivity(Directorio.class)"></ImageView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:gravity="center_horizontal"
					android:clickable="true" android:text="@string/main_dir"
					android:onClick="showActivity(Directorio.class)" android:textSize="18dip"
					android:textColor="@color/text"></TextView>
			</LinearLayout>

			<LinearLayout android:orientation="vertical"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="center" android:padding="10dip">
				<ImageView android:src="@color/effect_tra"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:clickable="true" android:onClick="showActivity(Tramites.class)"></ImageView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="@string/main_tra"
					android:gravity="center_horizontal" android:clickable="true"
					android:onClick="showActivity(Tramites.class)" android:textSize="18dip"
					android:textColor="@color/text"></TextView>
			</LinearLayout>

			<LinearLayout android:orientation="vertical"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="center" android:padding="10dip">
				<ImageView android:src="@color/effect_gob"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:clickable="true" android:onClick="showActivity(Gobierno.class)"></ImageView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="@string/main_gob"
					android:gravity="center_horizontal" android:clickable="true"
					android:onClick="showActivity(Gobierno.class)" android:textSize="18dip"
					android:textColor="@color/text"></TextView>
			</LinearLayout>

		</LinearLayout>

		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:padding="10dip" android:gravity="bottom">

			<TextView android:text="@string/quit" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:gravity="left"
				android:clickable="true" android:onClick="onQuitClick"
				android:paddingRight="18dip" android:textSize="18dip"
				android:textColor="@color/text"></TextView>

		</LinearLayout>

	</LinearLayout>

</ScrollView>