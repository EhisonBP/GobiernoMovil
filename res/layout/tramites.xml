<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="left" android:padding="6dp">

		<TextView android:id="@+id/start" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Ruta de Inicio"
			android:clickable="true" android:onClick="onMainClick"
			android:textSize="14sp" android:textColor="@color/text" />

		<TextView android:text=" | " android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="14sp"
			android:textColor="@color/text" />

		<TextView android:id="@+id/end" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Ruta Actual"
			android:textSize="14sp" android:textColor="@color/text" />

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="right">

			<ImageView android:src="@color/effect_icon"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:clickable="true" android:onClick="onMainClick" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout android:gravity="center"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="10sp">

		<TextView android:text="@string/selected"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="18sp" android:textColor="@color/text"
			android:paddingRight="10sp"></TextView>

		<Spinner android:id="@+id/spinner_tra" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:prompt="@string/tramites"></Spinner>

	</LinearLayout>

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:padding="8sp">

			<TextView android:id="@+id/text_tra" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:linksClickable="true"
				android:autoLink="all" android:textColor="#FFFFFF" android:textSize="16sp"></TextView>

		</LinearLayout>

	</ScrollView>

</LinearLayout>