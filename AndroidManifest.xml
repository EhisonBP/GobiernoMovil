<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="gob.movil" android:versionName="0.6.8.5" android:versionCode="86">
	<uses-sdk android:minSdkVersion="7" />

	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".app.GobiernoMovil"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>

		<activity android:name=".info.Search" android:label="@string/search_label">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH">
				</action>
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable"></meta-data>
		</activity>

		<activity android:name=".app.Directorio"
			android:label="@string/directorio">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".app.Alcaldias"
			android:label="@string/alcaldias">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".app.Tramites"
			android:label="@string/tramites">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".app.Gobierno"
			android:label="@string/gobierno">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".info.About" android:label="@string/about">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".info.Help" android:label="@string/help">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".info.Show">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>

	</application>
</manifest>
