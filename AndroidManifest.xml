<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="gob.movil" android:versionName="0.7" android:versionCode="100">
	<uses-sdk android:minSdkVersion="7" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".app.GobiernoMovil" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".info.Search" android:label="@string/search_label">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH">
				</action>
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable"></meta-data>
		</activity>
		<activity android:name=".app.Directory" android:label="@string/directory_title">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".app.Alcaldias" android:label="@string/alcaldias">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".app.Tramites" android:label="@string/tramites">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".app.Government" android:label="@string/government_title">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".info.About" android:label="@string/about"
			android:theme="@android:style/Theme.Dialog">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".info.Help" android:label="@string/help">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".info.Show">
			<meta-data android:name="android.app.default_searchable"
				android:value=".info.Search"></meta-data>
		</activity>
		<activity android:name=".info.Preferences" android:label="@string/preferences"></activity>
		<activity android:name=".twitter.TwitterActivity"
			android:label="@string/twitter" android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name=".twitter.Timeline"></activity>
		<activity android:name=".twitter.Mentions"></activity>
		<activity android:name=".twitter.Retweets"></activity>

		<activity android:name=".twitter.OAuthTwitter">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="callback" android:host="gm" />
			</intent-filter>
		</activity>
	</application>
</manifest>